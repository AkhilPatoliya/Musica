<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
<style name="csoundSeekBar" parent="android:Widget.SeekBar">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <style name="csoundButtonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">-3dip</item>
    	<item name="android:layout_marginRight">-3dip</item>
    </style>
	<style name="csoundAlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:textSize">20sp</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        </style>
</resources>
